<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/gameover">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="142dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/play"
        android:textColor="#bdfcf2"
        android:textSize="18dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebookshare"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="245dp"
        android:layout_marginRight="416dp"
        android:background="@drawable/facebookshare"
        android:textColor="#bdfcf2"
        android:textSize="18dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="230dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/exit"
        android:textColor="#bdfcf2"
        android:textSize="18dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/highscore"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_marginRight="386dp"
        android:text="HighScore:"
        android:textColor="#edecea"
        android:textSize="18dp" />
</RelativeLayout>